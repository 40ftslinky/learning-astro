---
import { getCollection } from "astro:content";
import BaseLayout from '../../layouts/BaseLayout.astro';
// import ProjectPost from '../../components/ProjectPost.astro';

// const allProjects = await Astro.glob('../projects/*.md');
const allProjects = await getCollection("projects");
// const tags = ['astro', 'blogging', 'learning in public', 'successes', 'setbacks', 'community']
// const tags = [...new Set(allProjects.map((project) => project.frontmatter.tags).flat())];
const tags = [...new Set(allProjects.map((project) => project.data.tags).flat())];

const pageTitle = "Tag Index";
---

<BaseLayout pageTitle={pageTitle}>   

    <h2>A list of tagged projects</h2>

    <div class="tags">
        {tags.map((tag) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>

</BaseLayout>

<style>
    a {
        color: #00539F;
    }
  
    .tags {
        display: flex;
        flex-wrap: wrap;
    }
  
    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }
</style>