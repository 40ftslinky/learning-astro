import { getCollection } from 'astro:content';
import { Image } from "astro:assets";


interface Props {
	project: getCollection<'project'>;
}

const { data, slug } = Astro.props.project;
// const { title, url } = Astro.props;

---

<a class="card" href={`/projects/${slug}`} >
	<span class="title">{data.title}</span>
	<!-- <img width={data.width} height={data.height} src={data.image.url} alt={data.image.description} || ''} loading="lazy" decoding="async" /> -->
    <Image src={data.image.url} width={data.image.width} height={data.image.height} alt={data.image.alt} />
</a>

