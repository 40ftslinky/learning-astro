---
const platform = "Astro";
const username = "40ftSlinky";

// import components 
import Social from './Social.astro';
import Logo from './Logo.astro';
---

<footer>
  <div class="footer_wrap footer_top">
    <div class="footer_left">
      
      <a href="/" class="site-title">
        <Logo class="footer_logo" viewBox="0 0 75 45" logo="logoOther" color="var(--accent-regular)" gradient />
      </a>

      <!-- <h6>40ftSlinky</h6> -->
      <p>Â© 2024</p>
    </div>
    <div class="footer_right">
      <strong>More Links</strong>
      <ul class="footer_menu">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </div>

  <div class="footer_wrap footer_bottom" >
    <div class="footer_left">
      <div class="left_wrap" >
        <p>Built by <a href={`https://${username}.com`}>{username}</a> with <a href={`https://${platform}.build/`}>{platform}</a>!</p>
      </div>
    </div>

    <div class="footer_right">
      <div class="social_wrap" >
        <!-- use component  -->
        <!-- // pass values as props to component // -->
        <Social platform="twitter" username="40ftSlinky" />
        <Social platform="github" username="40ftSlinky" />
        <Social platform="youtube" username="40ftSlinky" />
      </div>
    </div>

  </div>

</footer>

<style>
  :root {
    --footer_hght: 100px;
  }


  footer {
    display: flex;
    flex-direction: column;
    /* gap: 1rem; */
    margin-top: 2rem;
    padding-top: 2rem;
    font-size: 1.5rem;
  }

  .footer_wrap, .footer_top, .footer_bottom {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 2rem var(--bodypadding) 1rem var(--bodypadding) ;
  }
  .footer_top {
    background-color: var(--gray-800);
  }
  .footer_bottom {
    background-color: var(--gray-700);
  }
  
  .footer_right, .footer_left {
    display: flex;
  }

  .footer_right {
    flex-direction: column;
  }

  .footer_left {
    flex-direction: row;
    gap: 2rem;
    align-items: flex-end;
  }
  .footer_left * { 
    margin-bottom: 0;
  }


  .social_wrap {
    display: flex;
    flex-direction: row;
  }

  .footer_menu {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    align-items: flex-end;
  }

  footer a,
  .footer_menu li a {
    /* margin-bottom: 0.5rem; */
    text-decoration: none;
    color: var(--accent-regular);
  }
  footer a:hover,
  .footer_menu li a:hover {
    text-decoration: underline;
  }


</style>